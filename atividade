
class Pessoa: 
    def __init__(self, nome, idade):
        self.nome = nome
        self.idade = idade
    
    def exibir(self):
        print(f'Olá, meu nome é {self.nome} tenho {self.idade} anos. ')

pessoa1 = Pessoa('Alice', '17')
pessoa1.exibir()
pessoa2 = Pessoa('luan', '18')
pessoa2.exibir()
